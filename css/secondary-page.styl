.container
  margin: 0 auto
  max-width: 900px
  padding: 0 1em

.secondary-page
  background: #efefef
  color: #304d4d
  min-height: 100vh

  a
    color: #D49F6A

    &:hover
      color: #FFD4AA

  button
    @extends $reset-button
    background: #8a9d56
    border-radius: 4px
    color: white
    line-height: 50px
    text-align: center
    width: 250px

    &:hover
      background: lighten(#8a9d56, 15%)
  iframe
    border: 1px solid black
    display: block
    margin: 0 auto
    max-width: 100%

  img
    display: block
    margin: 0 auto
    max-width: 100%

  .secondary-page-hero
    background-image: url('assets/about/about-hero.jpg')
    background-position: center
    background-size: cover
    height: 300px
    padding: 4em

    .secondary-page-hero-title
      color: white
      font-size: 3em
      font-weight: 300
      margin: 3em 0

  .secondary-page-container
    @extends .container
    display: flex
    flex-wrap: wrap

  .secondary-page-menu
    background: #e2e2e2

    a
      border: 4px solid transparent
      color: #304d4d
      font-size: 14px
      padding: 1em 2em
      text-decoration: none

      &.active
        border-bottom-color: #8a9d56

      &:hover:not(.active)
        background-color: #d4d4d4
        border-color: #e2e2e2

  .secondary-page-content
    padding: 3em 0

  .team-page-header
    color: #8a9d56
    font-weight: 400
    margin: 0 0 1em
    
  .team-list
    display: flex
    flex-wrap: wrap
    justify-content: center
    text-align: center
    max-width: 900px

    .team-member
      padding: 0 1em 2em 1em
      width: 25%
      
      @media screen and (max-width: 600px)
        width: 100%

    .team-member-name
      font-size: 1.1em
      font-weight: 700
      margin: 0.8em 0 0 0

    .team-member-title
      @extends p

  .organizations
    display: flex
    flex-wrap: wrap
    max-width: 900px

    .organization
      margin: 2rem 0
      width: 100%

    .organization-content
      align-items: center
      display: flex
      flex-wrap: wrap

      p
        margin: 0
        width: 80%
        
        @media screen and (max-width: 768px)
          margin: 1em 0 0
          width: 100%

      .organization-logo
        padding: 0 3rem
        width: 20%
        
        @media screen and (max-width: 768px)
          text-align: center
          width: 100%
          
          img, svg
            max-width: 150px
            

  .about-section
    clearfix()

    img
      &.float-left
        float: left
        margin: 0 2em 2em 0

      &.float-right
        float: right
        margin: 0 0 2em 2em

  .call-to-action
    border-bottom: 1px solid #e0e0e0
    border-top: 1px solid #e0e0e0
    margin: 2em 0
    padding: 2em 0
    text-align: center


    .call
      font-weight: 700
      margin: 0 0 1em 0
      
  .project-metadata
    background-color: #008790
    
  .about-default-page
    width: 100%
    
    @media screen and (max-width: 768px)
      .map-image
        width: 100%
        
    @media screen and (max-width: 400px)
      img
        width: 100%
      
  .education-page
    width: 100%
    
    p, img
      max-width: 870px
